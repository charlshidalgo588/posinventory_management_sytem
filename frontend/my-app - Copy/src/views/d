<template>
  <Layout title="Reports">
    <div class="px-0 py-6 space-y-10 w-full max-w-none">
      <!-- SALES ACTIVITY -->
      <div>
        <h2 class="mb-4 text-xl font-bold text-gray-700">Sales Activity</h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
          <div
            v-for="card in salesActivity"
            :key="card.label"
            class="p-6 rounded-xl shadow-lg hover:shadow-xl transition bg-white"
          >
            <div class="text-sm text-blue-600 font-medium">{{ card.label }}</div>
            <div class="mt-2 text-3xl font-extrabold text-blue-800">{{ card.value }}</div>
          </div>
        </div>
      </div>

      <!-- INVENTORY SUMMARY -->
      <div>
        <h2 class="mb-4 text-xl font-bold text-gray-700">Inventory Summary</h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-5 gap-6">
          <div
            v-for="box in inventorySummaryBoxes"
            :key="box.label"
            class="p-6 rounded-xl shadow-lg hover:shadow-xl transition"
            :class="box.isRed ? 'bg-red-50' : 'bg-white'"
          >
            <div class="text-sm font-medium" :class="box.isRed ? 'text-red-700' : 'text-blue-600'">
              {{ box.label }}
            </div>
            <div
              class="mt-2 text-3xl font-extrabold"
              :class="box.isRed ? 'text-red-800' : 'text-blue-800'"
            >
              {{ box.value }}
            </div>
          </div>
        </div>
      </div>

      <!-- TOP SELLING ITEMS -->
      <div>
        <h2 class="mb-4 text-xl font-bold text-gray-700">Top Selling Items This Month</h2>

        <div class="p-6 bg-white rounded-2xl shadow-lg overflow-x-auto">
          <!-- Custom Buttons -->
          <div class="flex items-center justify-between mb-2">
            <div class="flex items-center gap-4">
              <button id="copyBtn" class="dt-btn-flat">Copy</button>
              <button id="csvBtn" class="dt-btn-flat">CSV</button>
              <button id="printBtn" class="dt-btn-flat">Print</button>
            </div>

            <div id="topTableControls" class="flex items-center gap-4"></div>
          </div>

          <!-- Table -->
          <table id="topSellingItemsTable" class="min-w-full divide-y divide-blue-200 table-auto">
            <thead class="bg-blue-100">
              <tr>
                <th class="px-4 py-2 text-left text-xs font-semibold text-blue-700 uppercase">
                  Product Name
                </th>
                <th class="px-4 py-2 text-left text-xs font-semibold text-blue-700 uppercase">
                  Quantity Sold
                </th>
                <th class="px-4 py-2 text-left text-xs font-semibold text-blue-700 uppercase">
                  Total Sales
                </th>
                <th class="px-4 py-2 text-left text-xs font-semibold text-blue-700 uppercase">
                  Category
                </th>
              </tr>
            </thead>

            <tbody class="bg-white divide-y divide-blue-200">
              <tr
                v-for="item in topSellingItems"
                :key="item.id"
                class="hover:bg-blue-50 transition-colors"
              >
                <td class="px-4 py-2 whitespace-nowrap">{{ item.ProductName }}</td>
                <td class="px-4 py-2 whitespace-nowrap">{{ item.total_quantity }}</td>
                <td class="px-4 py-2 whitespace-nowrap">₱{{ price(item.total_sales) }}</td>
                <td class="px-4 py-2 whitespace-nowrap">{{ item.CategoryName }}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- MONTHLY SALES -->
      <div>
        <h2 class="mb-4 text-xl font-bold text-gray-700">Monthly Sales</h2>

        <div class="p-6 bg-white rounded-2xl shadow-lg">
          <div class="mb-6 flex items-center justify-between">
            <div class="text-sm text-blue-700">Total Sales This Month</div>
            <div class="text-3xl font-bold text-blue-800">₱{{ price(monthlyTotal) }}</div>
          </div>

          <div class="h-64 w-full">
            <canvas id="monthlySalesChart"></canvas>
          </div>
        </div>
      </div>
    </div>
  </Layout>
</template>

<script setup>
import { ref, onMounted } from 'vue'
import Layout from '@/components/Layout.vue'
import Chart from 'chart.js/auto'

/* jQuery + DataTables */
import 'https://code.jquery.com/jquery-3.5.1.min.js'
import 'https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js'

/* DataTables Buttons */
import 'https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js'
import 'https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js'
import 'https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js'

/* CSV support */
import 'https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js'

/* DATA */
const salesActivity = ref([
  { label: "Today's Sales", value: '₱414.00' },
  { label: 'Items Sold Today', value: 7 },
  { label: 'Transactions Today', value: 7 },
  { label: 'Void Transactions', value: 0 },
])

const inventorySummaryBoxes = ref([
  { label: 'Quantity in Hand', value: 383 },
  { label: 'Quantity to Receive', value: 0 },
  { label: 'Low Stock Items', value: 0, isRed: true },
  { label: 'Total Items', value: 3 },
  { label: 'Active Items', value: 3 },
])

const topSellingItems = ref([
  { id: 1, ProductName: 'Nails', total_quantity: 6, total_sales: 120, CategoryName: 'Roof' },
  { id: 2, ProductName: 'Roof', total_quantity: 3, total_sales: 1000, CategoryName: 'Roof' },
  {
    id: 3,
    ProductName: 'Roof Gutter',
    total_quantity: 3,
    total_sales: 750,
    CategoryName: 'Roof Gutter',
  },
])

const monthlySales = ref([
  { date: '2025-12-03', total: 700 },
  { date: '2025-12-04', total: 900 },
  { date: '2025-12-05', total: 400 },
])

const monthlyTotal = ref(2058.4)

const price = (v) => Number(v || 0).toLocaleString('en-PH', { minimumFractionDigits: 2 })

/* ON MOUNT */
onMounted(() => {
  const table = $('#topSellingItemsTable').DataTable({
    paging: true,
    searching: true,
    info: true,
    order: [],
    dom: 'Blftrip', // required for buttons API
    buttons: ['copy', 'csv', 'print'],
  })

  /* Move search + length controls */
  const controls = $('#topTableControls')
  controls.append($('#topSellingItemsTable_length'))
  controls.append($('#topSellingItemsTable_filter'))

  /* Custom triggers */
  document.getElementById('copyBtn').onclick = () => table.button('.buttons-copy').trigger()
  document.getElementById('csvBtn').onclick = () => table.button('.buttons-csv').trigger()
  document.getElementById('printBtn').onclick = () => table.button('.buttons-print').trigger()

  /* Chart */
  const ctx = document.getElementById('monthlySalesChart')
  new Chart(ctx, {
    type: 'line',
    data: {
      labels: monthlySales.value.map((x) => x.date),
      datasets: [
        {
          label: 'Daily Sales',
          data: monthlySales.value.map((x) => x.total),
          borderColor: '#1D4ED8',
          backgroundColor: 'rgba(29, 78, 216, 0.2)',
          borderWidth: 3,
          pointRadius: 5,
          tension: 0.4,
          fill: true,
        },
      ],
    },
    options: { responsive: true, maintainAspectRatio: false },
  })
})
</script>

<style scoped>
/* KEEP THESE BUTTONS (your custom UI) */
.dt-btn-flat {
  background: transparent !important;
  color: #1d4ed8 !important;
  font-size: 14px;
  padding: 2px 6px;
}
.dt-btn-flat:hover {
  text-decoration: underline;
  color: #153eaa !important;
}

/* ❌ REMOVE THE DUPLICATED COPY/CSV/PRINT ROW */
div.dt-buttons {
  display: none !important;
}

/* DataTables layout fixes */
.dataTables_length select,
.dataTables_filter input {
  height: 28px !important;
  border-radius: 4px !important;
}

/* Pagination */
.paginate_button {
  padding: 4px 12px !important;
  border-radius: 4px !important;
  border: 1px solid #d1d5db !important;
}
.paginate_button.current {
  background: #1d4ed8 !important;
  color: white !important;
}
</style>
